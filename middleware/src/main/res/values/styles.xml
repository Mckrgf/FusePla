<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>



    <style name="Transparent2" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/fadeStyle</item>
    </style>
    <style name="TranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <style name="LaunchAppTheme2" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>

    </style>

    <style name="AppFadeTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowAnimationStyle">@style/fadeStyle</item>

    </style>


    <style name="common_ptr_frame_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dp_50</item>
        <item name="android:layout_marginBottom">@dimen/dp_50</item>
        <item name="ptr_keep_header_when_refresh">true</item>
        <item name="ptr_pull_to_fresh">false</item>
        <item name="ptr_ratio_of_header_height_to_refresh">1.2</item>
        <item name="ptr_resistance">1.7</item>
    </style>
    <style name="pop_add">
        <item name="android:windowEnterAnimation">@anim/pop_add_show</item>
        <item name="android:windowExitAnimation">@anim/pop_add_hide</item>
    </style>

    <style name="horizontal_custom_list_widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="text_size">14</item>
        <item name="title_bg_color">@color/white</item>
    </style>
    <style name="horizontal_custom_infinite_listView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>
    <declare-styleable name="CustomDownloadText">
        <attr name="content_value" format="string|reference" />
        <attr name="checked_value" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomInfiniteListView">
        <attr name="enable_add" format="boolean" />
        <attr name="enable_save" format="boolean" />
    </declare-styleable>

    <style name="ptr_frame_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dp_50</item>
        <item name="android:layout_marginBottom">@dimen/dp_50</item>
        <item name="android:tag">refreshFrameLayout</item>
        <item name="ptr_pull_to_fresh">false</item>
        <item name="ptr_keep_header_when_refresh">true</item>
        <item name="ptr_ratio_of_header_height_to_refresh">1.2</item>
        <item name="ptr_resistance">1.7</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TabTestStyle" >
        <item name="android:textColor">@color/textColorlightblack</item>
        <item name="android:textSize">@dimen/fontSize_12sp</item>
    </style>

    <!-- 统一个页面的定义的style -->
    <style name="style_text_normal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_text_normal_gray">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_text_big">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_text_middle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="style_text_middle_grey">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="style_text_small_grey">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_text_small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>





    <style name="style_list_item_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="dialogstyle" parent="Base.Theme.AppCompat.DialogWhenLarge">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <declare-styleable name="CustomMaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <style name="dialogAnimator">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>



    <style name="SBDASplitLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>

    </style>

    <style name="style_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/themeColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="widgetTitleTextStyle">
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/fontSize_12sp</item>
        <item name="android:textColor">@color/textColorlightblack</item>
        <!-- <item name="android:textStyle">bold</item>-->
        <item name="android:drawableLeft">@drawable/sh_title_tag</item>
        <item name="android:drawablePadding">@dimen/dp_5</item>
    </style>

    <style name="psc_edit_date_horizontal_style_text_view">
        <item name="bold">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="edit_maxLine">5</item>
        <item name="text_width">100dp</item>
        <item name="android:layout_marginBottom">@dimen/dp_1</item>
        <item name="android:layout_height">46dp</item>
        <item name="key_width">150dp</item>
    </style>

</resources>